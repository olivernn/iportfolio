<h1>Editing Image</h1>

<% form_for([@project, @image], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [@project, @image] %> |
<%= link_to 'Back', project_path(@project) %>

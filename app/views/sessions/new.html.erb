<%= title "Login", :h2 %>
<% form_tag session_path do %>
	<fieldset>
		<legend>Your Details</legend>
		<%= label_tag 'login', 'Username' %>
		<%= text_field_tag 'login', @login %><br/>

		<%= label_tag 'password' %>
		<%= password_field_tag 'password', nil %><br/>

		<%= label_tag 'remember_me', 'Remember me' %>
		<%= check_box_tag 'remember_me', '1', @remember_me %><br/>
	</fieldset>
	
	<fieldset>
		<legend>Login with OpenID</legend>
		<%= label_tag 'openid_url', 'OpenID URL' %>
		<%= text_field_tag 'openid_url' %><br/>
	</fieldset>
	
	<div class="buttons">
		<%= submit_tag 'Login' %>
		<%= link_to 'Forgotten Password', forgot_password_path %>
	</div>
<% end -%>
